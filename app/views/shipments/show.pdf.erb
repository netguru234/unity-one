<!doctype html>
<html>
  <head>
    <meta charset='utf-8' />
    <%= wicked_pdf_stylesheet_link_tag "pdf" -%>
    <%= wicked_pdf_javascript_include_tag "number_pages" %>
  </head>
  <body onload='number_pages'>
    <div id="header" class="text-center">
      <h2>Shipment Receipt</h2>
      <%= image_tag wicked_pdf_asset_base64('img/logo-white.svg') %> <strong style="font-size: 1.7rem; color: #fff;">GLOBAL EXPRESS DELIVERY</strong> <br>
    </div>
    <address class="text-center">
      <strong>
        <small>Email: infologistixsexpressherokuapp@aol.com</small> <br>
        <small>Phone: +44 736 561 9844</small> <br>
        <small>Web: https://www.logistixglobalexpress.com</small> <br>
      </strong>
    </address>
    <br>
    <div class="paid text-center">
      <%= image_tag wicked_pdf_asset_base64('img/paid.jpg') %>
      <%= image_tag wicked_pdf_asset_base64('img/paid2.jpg') %>
      <%= image_tag wicked_pdf_asset_base64('img/paid.jpg') %>
      <%= image_tag wicked_pdf_asset_base64('img/paid2.jpg') %>
    </div>
    <div id="content" class="text-center">
      <p><strong>Ship Date:</strong> <%= @shipment.created_at.strftime("%d/%m/%Y") %></p>
      <p><strong>Tracking Number:</strong> <%= @shipment.tracking_number %></p>
      <div class="paid text-center">
        <%= image_tag wicked_pdf_asset_base64('img/paid.jpg') %>
        <%= image_tag wicked_pdf_asset_base64('img/paid.jpg') %>
        <%= image_tag wicked_pdf_asset_base64('img/paid.jpg') %>
        <%= image_tag wicked_pdf_asset_base64('img/paid.jpg') %>
      </div>
      <hr>
      <h6>Sender's Details</h6>
        <strong>
          <p>Sender's Name: <%= @shipment.sender_name %></p>
          <p>Sender's Phone: <%= @shipment.sender_phone %></p>
          <p>Sender's Email: <%= @shipment.sender_email %></p>
          <p>Sender's Address: <%= @shipment.sender_address %>, <%= @shipment.shipped_from %></p>
        </strong>
      <hr>
      <h6>Receiver's Details</h6>
        <p>Receiver's Name: <%= @shipment.receiver_name %></p>
        <p>Receiver's Phone: <%= @shipment.receiver_phone %></p>
        <p>Receiver's Email: <%= @shipment.receiver_email %></p>
        <p>Receiver's Address: <%= @shipment.receiver_address %>, <%= @shipment.destination %></p>
        <div class="paid text-center">
          <%= image_tag wicked_pdf_asset_base64('img/paid.jpg') %>
          <%= image_tag wicked_pdf_asset_base64('img/paid.jpg') %>
          <%= image_tag wicked_pdf_asset_base64('img/paid.jpg') %>
          <%= image_tag wicked_pdf_asset_base64('img/paid.jpg') %>
        </div>
      <%= image_tag wicked_pdf_asset_base64('barcode.png') %>
      <%= yield %>
    </div>
  </body>
</html>
