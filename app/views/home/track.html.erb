<picture class="top_left">
  <source media="(min-width:993px)" srcset="<%= image_path('img/image.png') %>" />
  <source media="(min-width:768px)" srcset="<%= image_path("img/eli_mobile.png") %>" />
  <img src="img/eli_mobile.png" alt="Eclipse" style="width: auto;" />
</picture>
<picture class="delivery">
  <!-- <source media="(min-width:px)" srcset="img/eli_mobile.png"> -->
  <source media="(min-width:993px)" srcset="<%= image_path('img/delivery.png') %>" />
  <source media="(min-width:768px)" srcset="<%= image_path('img/delivery_smaller.png') %>" />
  <img src="<%= image_path('img/delivery_smaller.png') %>" alt="Delivery" style="width: auto;" />
