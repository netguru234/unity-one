<!-- content start -->
<div class="container track-page">
  <div class="row">
    <section class="col-lg-6 mb-3 mt-md-5">
      <h2 class="orange d-none d-md-block">Track your Order</h2>
      <h2 class="orange d-md-none">Track your</h2>
      <h2 class="orange d-md-none">Order</h2>
      <form class="pr-4" action="<%= search_path %>" method="get" id="search-form">
		  <div class="">
        <div class="">
          <!-- <input class="" type="text" name="" placeholder="Track Number" /> -->
          <%= text_field_tag 'search', params[:search], placeholder: "Enter Tracking Number", autofocus: true, class: 'form-control' %>
        </div>
        <div class="mt-2">
          <%= button_tag "Track Shipment", class: "btn_orange track", :name => nil %>
        </div>
		  </div>
		  <!-- <button type="submit" class="btn btn-primary">Track Shipment</button> -->
		</form>
      
      <div class="mt-5">
        <img class="img-fluid" src="img/icon.png" />
      </div>
    </section>
  </div>
</div>
<!-- content end -->
